</head>

<body>


         <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
              <div class="navbar-header">
                <a class="navbar-brand" href="/"><i class="fab fa-gripfire"></i> WigWam!</a>
              </div>

              <button class="navbar-toggler" type="button" data-toggle="collapse"
              data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
              aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>

              <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="nav navbar-nav mr-auto">
                  <li class="nav-item active">
                    <a class="nav-link" href="/campgrounds"><i class="fas fa-home"></i> Home </a>
                  </li>
                  <li class="nav-item">
                            <a class="nav-link text-dark" href="/users"><i class="fas fa-fire"></i> Campers</a>
                  </li>
                </ul>

                <ul class="navbar-nav">
                        <% if (currentUser) { %>
                        <li class="nav-item">
                            <a class="nav-link text-dark"
                                href="/users/<%= currentUser._id %>"><i class="fas fa-user"></i>  <%= currentUser.firstName %></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/logout"><i class="fas fa-sign-out-alt"></i>  Logout</a>
                        </li>
                        <% } else { %>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/login">
                                <i class="fa fa-sign-in-alt" ></i>  Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/register"><i class="fas fa-user-plus"></i>  Sign Up</a>
                        </li>
                        <% } %>
                    </ul>
              </div>

            </div>
        </nav>




    <div class="main-container">
        <div class="container pt-3">
            <% if (error && error.length > 0) { %>
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
            <% } %>
            <% if (success && success.length > 0) { %>
            <div class="alert alert-success" role="alert">
                <%= success %>
            </div>
            <% } %>
        </div>
        
        <div class="form-container pt-4 pt-md-5">
           <h1 style="text-align: center">Sign Up</h1>
         
           <form action="/register" method="post">
       
               <div class="form-group inner-addon left-addon" style="padding-top: 15px;">
                     <i class="glyphicon glyphicon-user"></i>
                    <input class="form-control" id="inputFirstName" type="text" name="firstName" placeholder="First Name" required>
                </div>

                 <div class="form-group inner-addon left-addon">
                    <i class="glyphicon glyphicon-user"></i>
                    <input class="form-control" id="inputLastName" type="text" name="lastName" placeholder="Last Name" required>
                </div>

                <div class="form-group inner-addon left-addon">
                <i class="glyphicon glyphicon-user"></i>
                    <input class="form-control" id="inputUsername" type="text" name="username" placeholder="Username" required>
                </div>
        
        <div class="form-group inner-addon left-addon">
             <i class="glyphicon glyphicon-envelope"></i>
              <input class="form-control" type="email" name="email" placeholder="Email">
              </div>
        
               <div class="form-group inner-addon left-addon">
              <i class="glyphicon glyphicon-lock"></i>
                    <input class="form-control" id="inputPassword" type="password" name="password"
                        placeholder="Password" required>
                </div>

                <div class="form-group inner-addon left-addon">
              <i class="glyphicon glyphicon-camera"></i>
                    <input class="form-control" id="inputPhoto" type="text" name="photo" placeholder="Profile Photo">
                </div>

                <div class="form-group">
                    <input class="btn btn-lg btn-primary btn-block" type="submit" value="Sign Up" style="background-color: #2c546d;">
                </div>
            </form>
        </div>
    </div>
    <footer class="bg-dark text-light text-center py-2 mt-4">
            <span>WigWam! 2020</span>
        </footer>
</body>

</html>

















